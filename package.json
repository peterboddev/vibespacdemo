{
  "name": "insurance-quotation-api",
  "version": "1.0.0",
  "description": "Insurance quotation system API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:simple": "tsc --skipLibCheck --noImplicitAny false src/index.ts --outDir dist --target ES2020 --module commonjs --esModuleInterop",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "cdk": "cdk",
    "cdk:bootstrap": "powershell -ExecutionPolicy Bypass -File scripts/bootstrap-cdk.ps1",
    "cdk:deploy": "cdk deploy",
    "cdk:destroy": "cdk destroy",
    "layer:build": "echo 'Layer building is now automated by CDK. This script is kept for legacy/manual use.'",
    "layer:build:win": "echo 'Layer building is now automated by CDK. This script is kept for legacy/manual use.'",
    "cdk:diff": "cdk diff",
    "cdk:synth": "cdk synth",
    "cdk:synth-and-deploy": "npm run cdk:synth && npm run cdk:deploy -- --require-approval never",
    "generate-routes": "ts-node scripts/generate-routes.ts",
    "deploy-with-routes": "npm run generate-routes && npm run cdk:synth-and-deploy",
    "cicd:bootstrap": "cdk bootstrap --app \"npx ts-node infrastructure/cicd-app.ts\"",
    "cicd:synth": "cdk synth --app \"npx ts-node infrastructure/cicd-app.ts\"",
    "cicd:deploy": "cdk deploy --app \"npx ts-node infrastructure/cicd-app.ts\" --require-approval never",
    "cicd:destroy": "cdk destroy --app \"npx ts-node infrastructure/cicd-app.ts\"",
    "cicd:diff": "cdk diff --app \"npx ts-node infrastructure/cicd-app.ts\"",
    "setup:github": "powershell -ExecutionPolicy Bypass -File scripts/setup-github-integration.ps1",
    "setup:github-bash": "bash scripts/setup-github-integration.sh",
    "setup:credentials": "powershell -ExecutionPolicy Bypass -File scripts/setup-credentials.ps1",
    "setup:credentials-bash": "bash scripts/setup-credentials.sh",
    "repo:info": "powershell -ExecutionPolicy Bypass -File scripts/get-repo-info.ps1"
  },
  "keywords": [
    "insurance",
    "quotation",
    "api",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-lambda-powertools/metrics": "^1.17.0",
    "@aws-lambda-powertools/tracer": "^1.17.0",
    "@aws-sdk/client-rds": "^3.654.0",
    "@aws-sdk/client-secrets-manager": "^3.654.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "aws-cdk": "^2.114.1",
    "aws-cdk-lib": "^2.218.0",
    "constructs": "^10.4.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
